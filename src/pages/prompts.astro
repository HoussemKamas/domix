    let li=0, ch=0, mode="type";

    function typeLoop(){
      const cur = lines[li] || "";
      if(mode==="type"){
        typingEl.textContent = lines.slice(0,li).join("\\n") + (li? "\\n":"") + cur.slice(0,ch);
        ch++;
        if(ch%2===0) burst(2);
        if(ch<=cur.length) setTimeout(typeLoop, 34);
        else{ mode="hold"; setTimeout(typeLoop, 420); }
      }else if(mode==="hold"){
        burst(18);
        mode="next";
        setTimeout(typeLoop, 300);
      }else{
        li++; ch=0;
        if(li>=lines.length){
          burst(40);
          setTimeout(()=>{ li=0; ch=0; mode="type"; typeLoop(); }, 850);
        }else{
          mode="type";
          setTimeout(typeLoop, 80);
        }
      }
    }
    typeLoop();

    function loop(){
      drawStars();
      drawSparks();
      requestAnimationFrame(loop);
    }
    loop();

    let t;
    addEventListener("resize", ()=>{
      clearTimeout(t);
      t=setTimeout(()=>{
        resize();
        seedStars();
      }, 120);
    });
  </script>

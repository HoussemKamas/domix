    let W=0,H=0,DPR=1;

    function resize(){
      DPR = Math.min(window.devicePixelRatio || 1, 2);
      W = Math.floor(innerWidth);
      H = Math.floor(innerHeight);

      starsCanvas.width = Math.floor(W*DPR);
      starsCanvas.height = Math.floor(H*DPR);

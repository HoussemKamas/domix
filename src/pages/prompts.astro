      sparkCanvas.style.height = H+"px";

      starsCtx.setTransform(DPR,0,0,DPR,0,0);
      sparkCtx.setTransform(DPR,0,0,DPR,0,0);
    }
    addEventListener("resize", resize);
    resize();

    const rand=(a,b)=>Math.random()*(b-a)+a;

    const stars=[];
    const layers = [
      { count: 140, speed: 0.18, r:[0.7,1.4], a:[0.55,0.95] },
      { count: 110, speed: 0.34, r:[0.9,1.9], a:[0.60,1.00] },
      { count: 60,  speed: 0.62, r:[1.2,2.6], a:[0.75,1.00] }
    ];

    function seedStars(){
      stars.length=0;
      for(const L of layers){
        for(let i=0;i<L.count;i++){
          stars.push({
            x: rand(0,W), y: rand(0,H),
            r: rand(L.r[0], L.r[1]),
            s: L.speed * rand(0.7, 1.4),
            a: rand(L.a[0], L.a[1]),
            tw: rand(0, Math.PI*2),
            big: (L.speed > 0.5)
          });
        }
      }
    }
    seedStars();

    function drawStars(){
      starsCtx.clearRect(0,0,W,H);

      for(const s of stars){
        s.y += s.s;
        if(s.y > H + 30){ s.y = -30; s.x = rand(0,W); }
        s.tw += (s.big ? 0.03 : 0.02);
        const tw = (Math.sin(s.tw)*0.22)+0.86;
        const alpha = s.a * tw;

        starsCtx.beginPath();
        starsCtx.fillStyle = `rgba(255,255,255,${alpha})`;
        starsCtx.arc(s.x, s.y, s.r, 0, Math.PI*2);
        starsCtx.fill();

        starsCtx.beginPath();
        starsCtx.fillStyle = `rgba(255,255,255,${alpha * (s.big ? 0.22 : 0.14)})`;
        starsCtx.arc(s.x, s.y, s.r * (s.big ? 6.2 : 4.6), 0, Math.PI*2);
        starsCtx.fill();

        starsCtx.beginPath();
        starsCtx.fillStyle = `rgba(188,19,254,${alpha * (s.big ? 0.11 : 0.07)})`;
        starsCtx.arc(s.x, s.y, s.r * (s.big ? 9.0 : 6.8), 0, Math.PI*2);
        starsCtx.fill();
      }
    }


      const el = document.getElementById("pixelLaptop");
      const r = el.getBoundingClientRect();
      const x = r.left + 18 + 18;
      const y = r.top + 10 + 18;
      return {x,y};
    }

    function burst(n=10){
      const src = laptopEmitter();
      for(let i=0;i<n;i++){
        if(particles.length>=MAXP) particles.shift();
        const ang = rand(-1.0, -0.10);
        const sp = rand(1.6, 3.7);
        particles.push({
          x: src.x + rand(-4, 8),
          y: src.y + rand(-6, 8),
          vx: Math.cos(ang)*sp + rand(0.1,1.2),
          vy: Math.sin(ang)*sp - rand(0.0,0.8),
          r: rand(1.0,2.2),
          a: rand(0.6,1.0),
          tw: rand(0, Math.PI*2),
          life: rand(46, 110)
        });
      }
    }

    function drawSparks(){
      sparkCtx.clearRect(0,0,W,H);
      sparkCtx.globalCompositeOperation = "lighter";

      for(let i=particles.length-1;i>=0;i--){
        const p = particles[i];
        p.x += p.vx; p.y += p.vy;
        p.vx *= 0.992; p.vy *= 0.992;
        p.vy += 0.006;
        p.life -= 1;
        p.tw += 0.14;

        const fade = Math.max(0, Math.min(1, p.life/80));
        const tw = (Math.sin(p.tw)*0.25)+0.85;
        const a = p.a * fade * tw;

        sparkCtx.beginPath();
        sparkCtx.fillStyle = `rgba(255,255,255,${a})`;
        sparkCtx.arc(p.x, p.y, p.r, 0, Math.PI*2);
        sparkCtx.fill();

        sparkCtx.beginPath();
        sparkCtx.fillStyle = `rgba(188,19,254,${a*0.35})`;
        sparkCtx.arc(p.x, p.y, p.r*3.2, 0, Math.PI*2);
        sparkCtx.fill();

        sparkCtx.beginPath();
        sparkCtx.strokeStyle = `rgba(255,255,255,${a*0.18})`;
        sparkCtx.lineWidth = Math.max(1, p.r*0.6);
        sparkCtx.moveTo(p.x, p.y);
        sparkCtx.lineTo(p.x - p.vx*3.2, p.y - p.vy*3.2);
